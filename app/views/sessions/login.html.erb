<div class="container">

<h1>Sign In</h1>

<p><%= @message %></p>

<div class="row">

  <%= form_tag "/authenticate", "class" => "col-md-4" do  %>

    <div class="form-group">
      <%= label_tag "username" %>
      <%= text_field_tag "username", "", "class" => "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag "password" %>
      <%= password_field_tag "password", "", "class" => "form-control" %>
    </div>

    <%= submit_tag "Sign me in", "class" => "btn btn-danger" %>

  <% end %>
</div>

</div>
